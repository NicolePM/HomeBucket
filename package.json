  "bugs": {
    "url": "https://github.com/SDB14/HomeBucket/issues"
  },
  "homepage": "https://github.com/SDB14/HomeBucket#readme",
  "dependencies": {
    "@apollo/react-hooks": "^4.0.0",
    "apollo-server-express": "^2.19.2",
    "bcrypt": "^5.0.1",
    "dotenv": "^14.3.2",
    "if-env": "^1.0.4",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.1.1"
  },
  "devDependencies": {
    "concurrently": "^5.2.0"
  }
}
